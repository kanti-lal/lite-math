{
  "name": "lite-math",
  "version": "1.0.2",
  "description": "A comprehensive TypeScript library of 40+ mathematical operations including arithmetic, advanced math, statistics, random numbers, algebra, and unit conversions.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./arithmetic": {
      "import": "./dist/arithmetic/index.js",
      "types": "./dist/arithmetic/index.d.ts"
    },
    "./advanced": {
      "import": "./dist/advanced/index.js",
      "types": "./dist/advanced/index.d.ts"
    },
    "./statistics": {
      "import": "./dist/statistics/index.js",
      "types": "./dist/statistics/index.d.ts"
    },
    "./random": {
      "import": "./dist/random/index.js",
      "types": "./dist/random/index.d.ts"
    },
    "./algebra": {
      "import": "./dist/algebra/index.js",
      "types": "./dist/algebra/index.d.ts"
    },
    "./conversion": {
      "import": "./dist/conversion/index.js",
      "types": "./dist/conversion/index.d.ts"
    }
  },
  "bin": {
    "lite-math": "./dist/cli.js"
  },
  "author": {
    "name": "Kanti Lal",
    "url": "https://github.com/kanti-lal"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kanti-lal/lite-math"
  },
  "homepage": "https://github.com/kanti-lal/lite-math",
  "bugs": {
    "url": "https://github.com/kanti-lal/lite-math/issues"
  },
  "keywords": [
    "math",
    "mathematics",
    "calculations",
    "arithmetic",
    "statistics",
    "algebra",
    "random",
    "conversion",
    "utility",
    "typescript",
    "cli"
  ],
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm run build && npm run test",
    "postpublish": "echo 'Package published successfully!'",
    "cli": "node dist/cli.js"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "tailwindcss": "^4.1.9",
    "postcss": "8.5.6"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "next": "16.0.7",
    "react": "19.2.1",
    "react-dom": "19.2.1",
    "class-variance-authority": "0.7.1",
    "clsx": "2.1.1",
    "lucide-react": "0.556.0",
    "tailwind-merge": "3.4.0",
    "tailwindcss-animate": "1.0.7"
  }
}